<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#666">

    <ImageView
        android:id="@+id/iv_large_cover"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/subscription_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/iv_large_cover"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="+ 订阅"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/shape_subscription_bg"
            android:textColor="@color/white"
            android:gravity="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/player_control_continer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/subscription_container"
        android:background="#e8e8e8">

        <ImageView
            android:id="@+id/play_icon"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/play_black_press"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="继续播放"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/play_icon"/>

        <TextView
            android:text="选集"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/detail_arrow"/>

        <ImageView
            android:id="@+id/detail_arrow"
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="18dp"
            android:src="@mipmap/arrow_icon"/>


    </RelativeLayout>



    <com.zhangtao.himalaya.views.RoundRectIamgeView
        android:id="@+id/viv_small_cover"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/iv_large_cover"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-40dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/iv_large_cover"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-25dp"
        android:layout_toRightOf="@+id/viv_small_cover">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:text="这是标题"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:text="这是作者"
            android:textColor="@color/sub_text_color"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/player_control_continer"/>

</RelativeLayout>