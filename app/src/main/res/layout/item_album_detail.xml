<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_album_detail_item_bg">

    <TextView
        android:id="@+id/order_text"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        android:padding="15dp"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/order_text"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/tv_title"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginRight="100dp"
            android:ellipsize="end"
            android:text="我是大标题"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_play_info"
                android:drawableLeft="@mipmap/play_info_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.4万"
                android:textColor="#979797"
                android:drawablePadding="4dp"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/tv_play_time"
                android:drawableLeft="@mipmap/ic_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="05:32"
                android:textColor="#979797"
                android:drawablePadding="4dp"
                android:textSize="11sp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/updated_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-3-4"
        android:textSize="12sp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>

</RelativeLayout>